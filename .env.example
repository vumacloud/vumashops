APP_NAME=VumaShops
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=https://shops.vumacloud.com
APP_TIMEZONE=Africa/Nairobi

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# ===========================================
# DATABASE (DigitalOcean Managed MySQL)
# ===========================================
DB_CONNECTION=central
DB_HOST=your-db-cluster.db.ondigitalocean.com
DB_PORT=25060
DB_DATABASE=vumashops_central
DB_USERNAME=doadmin
DB_PASSWORD=your-password
MYSQL_ATTR_SSL_CA=/etc/ssl/certs/ca-certificates.crt

# ===========================================
# REDIS (DigitalOcean Managed Redis)
# ===========================================
REDIS_CLIENT=phpredis
REDIS_HOST=your-redis-cluster.db.ondigitalocean.com
REDIS_USERNAME=default
REDIS_PASSWORD=your-redis-password
REDIS_PORT=25061
REDIS_SCHEME=tls
REDIS_PREFIX=vumashops:

# ===========================================
# SESSION & CACHE
# ===========================================
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=redis

CACHE_STORE=redis

# ===========================================
# MAIL (Brevo/SendinBlue)
# ===========================================
MAIL_MAILER=smtp
MAIL_HOST=smtp-relay.brevo.com
MAIL_PORT=587
MAIL_USERNAME=your-brevo-username
MAIL_PASSWORD=your-brevo-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@vumacloud.com"
MAIL_FROM_NAME="${APP_NAME}"

# ===========================================
# DIGITALOCEAN SPACES (S3-compatible storage)
# ===========================================
DO_SPACES_KEY=your-spaces-key
DO_SPACES_SECRET=your-spaces-secret
DO_SPACES_ENDPOINT=https://ams3.digitaloceanspaces.com
DO_SPACES_REGION=ams3
DO_SPACES_BUCKET=vumashops

AWS_ACCESS_KEY_ID="${DO_SPACES_KEY}"
AWS_SECRET_ACCESS_KEY="${DO_SPACES_SECRET}"
AWS_DEFAULT_REGION="${DO_SPACES_REGION}"
AWS_BUCKET="${DO_SPACES_BUCKET}"
AWS_ENDPOINT="${DO_SPACES_ENDPOINT}"
AWS_USE_PATH_STYLE_ENDPOINT=false

# ===========================================
# WHMCS INTEGRATION
# ===========================================
WHMCS_API_KEY=your-secure-api-key
WHMCS_URL=https://billing.vumacloud.com

# ===========================================
# PAYMENT GATEWAYS (Platform defaults)
# ===========================================
# Tenants configure their own gateway credentials via admin panel
# These are only used if tenant hasn't configured their own

PAYSTACK_PUBLIC_KEY=
PAYSTACK_SECRET_KEY=

FLUTTERWAVE_PUBLIC_KEY=
FLUTTERWAVE_SECRET_KEY=

# ===========================================
# SMS (Africa's Talking)
# ===========================================
AFRICASTALKING_USERNAME=
AFRICASTALKING_API_KEY=

# ===========================================
# VITE
# ===========================================
VITE_APP_NAME="${APP_NAME}"
